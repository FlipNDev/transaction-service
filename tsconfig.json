{
    "compilerOptions": {
      "target": "es2020", 
      "module": "commonjs",
      "lib": ["es2020", "dom"],
      "rootDir": ".",
      "strict": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
  }
